            <TextBox x:Name="firstJointX" HorizontalAlignment="Left" Height="57" Margin="156,38,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="195" FontSize="29.333" Grid.Column="1"/>
            <TextBox x:Name="firstJointY" HorizontalAlignment="Left" Height="57" Margin="385,38,0,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top" Width="206" FontSize="29.333" Grid.Column="1"/>
