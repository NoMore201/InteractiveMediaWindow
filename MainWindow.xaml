            <TextBox x:Name="thirdJointTracked" HorizontalAlignment="Left" Height="57" Margin="888,181,0,0" TextWrapping="Wrap" Text="NotTrkd" VerticalAlignment="Top" Width="192" FontSize="29.333" FontWeight="Bold" Grid.Column="1"/>


            <Label x:Name="handLabel" Content="HandJoint" HorizontalAlignment="Left" Margin="65,267,0,0" VerticalAlignment="Top" Height="57" Width="312" FontSize="32" FontWeight="Bold" RenderTransformOrigin="1.037,2.449" Grid.ColumnSpan="2"/>
            <TextBox x:Name="fourthJointX" HorizontalAlignment="Left" Height="57" Margin="156,267,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="195" FontSize="29.333" Grid.Column="1"/>
