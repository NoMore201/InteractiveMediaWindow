            <TextBox x:Name="fisrtJointTracked" HorizontalAlignment="Left" Height="57" Margin="888,38,0,0" TextWrapping="Wrap" Text="NotTrkd" VerticalAlignment="Top" Width="192" FontSize="29.333" FontWeight="Bold" Grid.Column="1"/>
            <Label x:Name="shoulderLabel" Content="ShoulderJoint" HorizontalAlignment="Left" Margin="65,38,0,0" VerticalAlignment="Top" Height="57" Width="312" FontSize="32" FontWeight="Bold" Grid.ColumnSpan="2"/>

            <Label x:Name="elbowLabel" Content="ElbowJoint" HorizontalAlignment="Left" Margin="65,107,0,0" VerticalAlignment="Top" Height="57" Width="312" FontSize="32" FontWeight="Bold" Grid.ColumnSpan="2"/>
            <TextBox x:Name="secondJointX" HorizontalAlignment="Left" Height="57" Margin="156,107,0,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="195" FontSize="29.333" Grid.Column="1"/>
